@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!--Allow for buttons to line up and horizontal scrolling-->
<style>
    body
    {
        white-space:nowrap;
        overflow-x:auto;
        margin-bottom:60px;
    }
    #algorithmDropdown, #startButtonParent
    {
        display:inline;
    }

    #canvasWrapper{
        position:relative;
    }
    #canvasWrapper canvas{
        position:absolute;
    }
    
</style>

<body>
    <div class="text-center">
        <h1 class="display-4" style="font-size:40px;">Welcome to the Tree Traversal Visualizer</h1>
        <p style="font-size:22px;">Please choose the tree size and the type of tree traversing algorithm you would like to visualize</p>
    </div>

    <div class="slidecontainer">
        <!--Choose graph size on range slider-->
        <link rel="stylesheet" href="~/css/graphSizeSlider.css" />   <!--include slider stylesheet-->
        <input type="range" min="2" max="15" value="15" class="slider" id="graphSize" />
        <p>Graph Size: <span id="graphSizeOutput"></span></p>
        <script src="~/js/graphSizeSliderControl.js"></script>
        <noscript>Sorry, your browser does not support JavaScript</noscript>
    </div>

    <div class="dropdown" id="algorithmDropdown">
        <!--Choose graph traversing algorithm-->
        <link rel="stylesheet" href="~/css/algorithmDropdown.css" /> <!--include algorithm dropdown button stylesheet-->
        <button class="dropbtn"><span id="dropButtonName">Select Algorithm</span></button>
        <script src="~/js/chooseAlgorithm.js"></script>

        <div class="dropdown-content">
            <input type="button" value="PRE-ORDER SEARCH" onclick="choosePreOrder()">
            <input type="button" value="IN-ORDER SEARCH" onclick="chooseInOrder()">
            <input type="button" value="POST-ORDER SEARCH" onclick="choosePostOrder()">
            <input type="button" value="BREADTH-FIRST SEARCH" onclick="chooseBreadthFirst()">
        </div>
    </div>

    <div id="startButtonParent">
        <!--Export necessary information and start animation functions-->
        <link rel="stylesheet" href="~/css/StartButtonStyle.css" />
        <script src="~/js/StartAnimation.js"></script>
        <script src="~/js/CreateGraph.js"></script>

        <script src="~/js/AnimatePreOrder.js"></script>
        <script src="~/js/AnimateInOrder.js"></script>
        <script src="~/js/AnimatePostOrder.js"></script>
        <script src="~/js/AnimateBreadthFirst.js"></script>
        <script src="~/js/ClearTopGraph.js"></script>

        <script src="~/js/AnimateNodeProcessing.js"></script>
        

        <button id="startButton"class="button" onclick="startAnimation()">Start</button>
    </div>

    
    <div id="canvasWrapper">
        
        <canvas id="backGroundCanvas" draggable="true"></canvas>
        <canvas id="topLevelCanvas" draggable="true"></canvas>
    </div>

    <p style="font-size: 20px; margin-bottom:20px" >
        Order of Visit: <span id="orderOfVisitOutput" style="color: #66bbcc; font-size: 25px;"></span>
    </p>  

</body>





